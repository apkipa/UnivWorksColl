<Control x:Class="ChatWpf.Controls.ImageEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatWpf.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.Template>
        <ControlTemplate TargetType="local:ImageEx">
            <hc:SimplePanel x:Name="LayoutRoot" Background="{TemplateBinding Background}">
                <Image x:Name="InnerImage" Stretch="{TemplateBinding Stretch}" RenderOptions.BitmapScalingMode="HighQuality" />
                <hc:SimplePanel.OpacityMask>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Border Height="{Binding ElementName=LayoutRoot, Path=ActualHeight}"
                                    Width="{Binding ElementName=LayoutRoot, Path=ActualWidth}"
                                    Background="White" CornerRadius="{TemplateBinding CornerRadius}" />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </hc:SimplePanel.OpacityMask>
            </hc:SimplePanel>
        </ControlTemplate>
    </Control.Template>
</Control>
